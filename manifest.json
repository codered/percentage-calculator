  "web_accessible_resources": ["css/*"],
  "browser_action": {
          "default_icon": {                    // optional
           "16": "images/percentage-16.png",
           "128": "images/percentage-128.png"
          },
          "default_title": "Percentage Calculator",      // optional; shown in tooltip
          "default_popup": "html/main.html"        // optional
        }
}
